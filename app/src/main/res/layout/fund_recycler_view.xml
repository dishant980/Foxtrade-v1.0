<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="181dp"
        android:layout_margin="10sp"
        app:cardCornerRadius="5sp"
        android:elevation="5sp"
        app:cardBackgroundColor="#D8F7FF"
        app:cardUseCompatPadding="false"
        android:background="@drawable/card_back"
        android:layout_gravity="center"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:orientation="vertical"
            android:background="@drawable/card_back">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:fontFamily="@font/inter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:textColor="@android:color/primary_text_light"
                    android:text="To"/>
                <TextView
                    android:textColor="#0E6878"
                    android:fontFamily="@font/inter"
                    android:id="@+id/admin_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:hint="Admin"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_marginTop="3sp"
                    android:fontFamily="@font/inter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:text="Narration"
                    android:textColor="@android:color/primary_text_light"

                    />

                <TextView
                    android:textColor="#0E6878"
                    android:fontFamily="@font/inter"
                    android:id="@+id/nara_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:hint="Narration"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <View
                    android:background="@drawable/line2"
                    android:layout_width="300sp"
                    android:layout_height="3sp"
                    android:layout_marginLeft="15sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15sp"
                    android:text="Amount"
                    android:textColor="@android:color/primary_text_light"
                    android:fontFamily="@font/inter"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="170sp"
                    android:fontFamily="@font/inter"
                    android:textColor="@android:color/primary_text_light"
                    android:text="Date" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/amt_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:hint="101.0"
                    android:textColor="#0E6878"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/date_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150sp"
                    android:textStyle="bold"
                    android:textColor="#0E6878"
                    android:textSize="15sp" />

            </LinearLayout>
            <TextView
                android:id="@+id/time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="212sp"
                android:textStyle="bold"
                android:textColor="#0E6878"
                android:textSize="15sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

