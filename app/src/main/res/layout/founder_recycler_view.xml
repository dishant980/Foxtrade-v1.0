<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="181dp"
        android:layout_margin="10sp"
        app:cardCornerRadius="5sp"
        app:cardBackgroundColor="#D8F7FF"
        android:elevation="5sp"
        app:cardUseCompatPadding="false"
        android:layout_gravity="center"


        >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="8sp"
                android:background="@drawable/card_back"

                >
                <TextView
                    android:fontFamily="@font/inter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:textSize="15sp"
                    android:textColor="@android:color/primary_text_light"
                    android:text="Club"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/club_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:fontFamily="@font/inter"
                    android:hint="Executive"
                    android:textColor="#0E6878"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                    <TextView
                        android:id="@+id/club_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:hint="E1"
                        android:textColor="#0E6878"
                        android:textSize="16sp"
                        android:layout_marginLeft="2sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:background="@drawable/line2"
                    android:layout_width="100sp"
                    android:layout_height="2sp"
                    android:layout_marginLeft="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="3sp"
                    android:fontFamily="@font/inter"
                    android:text="Month"
                    android:textSize="15sp"
                    android:textColor="@android:color/primary_text_light"

                    />


                <TextView
                    android:textColor="#0E6878"
                    android:fontFamily="@font/inter"
                    android:id="@+id/month_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:hint="Month"
                    android:textStyle="bold"
                    android:textSize="16sp" />


                <View
                    android:background="@drawable/line2"
                    android:layout_width="100sp"
                    android:layout_height="2sp"
                    android:layout_marginLeft="15sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15sp"
                    android:textSize="15sp"
                    android:fontFamily="@font/inter"
                    android:layout_marginTop="5sp"
                    android:textColor="@android:color/primary_text_light"
                    android:text="Salary Rank" />

                <TextView
                    android:id="@+id/salary_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="101.0"
                    android:layout_marginLeft="15sp"
                    android:textColor="#0E6878"
                    android:fontFamily="@font/inter"
                    android:textStyle="bold"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_marginRight="15sp"
                android:layout_marginTop="4sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="35sp"
                    android:layout_marginRight="15sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:fontFamily="@font/inter"
                        android:text="Salary"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/salary1_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:hint="101.00"
                        android:textStyle="bold"
                        android:textColor="#0E6878"
                        android:textSize="16sp" />

                    <View
                        android:background="@drawable/line2"
                        android:layout_width="100sp"
                        android:layout_height="2sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:fontFamily="@font/inter"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/Level_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:hint="101.00"
                        android:textStyle="bold"
                        android:textColor="#0E6878"
                        android:textSize="16sp" />


                </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

