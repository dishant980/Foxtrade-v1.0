<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >



    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="150dp"
        app:cardCornerRadius="3sp"
        android:layout_margin="10sp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#D8F7FF"
        android:layout_gravity="center"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="140sp"
            android:layout_height="140dp"
            android:outlineProvider="none"
            app:cardBackgroundColor="#D8F7FF"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25sp"
                    android:background="@drawable/profile12" />
                <TextView
                    android:id="@+id/idtext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:textColor="@android:color/primary_text_light"
                    />
                <TextView
                    android:id="@+id/idtext3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="referal"
                    android:textColor="#0E6878"
                    android:textSize="18sp" />



            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="5sp"
            android:orientation="vertical">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12sp"
                android:text="Self Investment"
                android:textColor="@android:color/primary_text_light"
                />

            <TextView
                android:id="@+id/idtext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12sp"
                android:hint="Self Investment"
                android:textColor="#0E6878"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12sp"
                android:text="Team Business"
                android:textColor="@android:color/primary_text_light"
                />

            <TextView
                android:id="@+id/idtext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12sp"
                android:hint="Team Business"
                android:textColor="#0E6878"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12sp"
                android:text="Team Size"
                android:textColor="@android:color/primary_text_light"
                />

            <TextView
                android:id="@+id/idtext5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12sp"
                android:layout_marginBottom="8sp"
                android:hint="team size"
                android:textColor="#0E6878"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
