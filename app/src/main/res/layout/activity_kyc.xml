<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/profile_back">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/status_text"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/inter"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_kyc"
        tools:context=".kycMainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_panel"
        android:layout_margin="20sp"
        android:id="@+id/personal_forum"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:paddingStart="15sp"
            android:text="@string/personal_details"
            android:textSize="@dimen/_18ssp"
            android:textColor="@android:color/primary_text_light"
            android:fontFamily="@font/inter"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:layout_marginTop="@dimen/_11ssp"
            android:textSize="@dimen/_11ssp"
            android:paddingStart="25sp"
            android:textColor="@android:color/primary_text_light"
            android:fontFamily="@font/inter"
            android:layout_marginBottom="5dp"
            />

        <EditText
            android:id="@+id/name1"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            android:textColor="@android:color/primary_text_light"
            android:fontFamily="@font/inter"
            android:background="@drawable/custom_input"
            android:hint="@string/your_name"
            android:textSize="@dimen/_11ssp"
            android:layout_gravity="center"
            android:paddingStart="15dp"
            android:singleLine="true"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/last_name"
            android:textSize="@dimen/_11ssp"
            android:textColor="@android:color/primary_text_light"
            android:fontFamily="@font/inter"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:paddingStart="25sp"
            />

        <EditText
            android:id="@+id/lastname1"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/custom_input"
            android:fitsSystemWindows="true"
            android:hint="@string/last_name"
            android:paddingStart="15sp"
            android:textSize="@dimen/_11ssp"
            android:textColor="@android:color/primary_text_light"
            android:fontFamily="@font/inter"
            android:layout_gravity="center"
            android:singleLine="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_11ssp"
            android:textColor="@android:color/primary_text_light"
            android:fontFamily="@font/inter"
            android:id="@+id/phone"
            android:paddingStart="25sp"
            />
        <LinearLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:fitsSystemWindows="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="5dp">

            <com.hbb20.CountryCodePicker
                android:id="@+id/countyCodePicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:ccp_autoFormatNumber="true"
                app:ccp_defaultNameCode="U"
                app:ccp_showFlag="true"
                app:ccp_showPhoneCode="true" />

            <EditText
                android:id="@+id/etphonenumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/custom_input"
                android:fontFamily="@font/inter"
                android:hint="@string/enter_phone"
                android:inputType="phone"
                android:textSize="@dimen/_11ssp"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textColor="@android:color/primary_text_light"
                tools:ignore="RtlSymmetry" />



        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_11ssp"
            android:text="@string/date_of_birth"
            android:textColor="@android:color/primary_text_light"
            android:fontFamily="@font/inter"
            android:paddingStart="25sp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/dob"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:focusable="false"
            android:paddingStart="15sp"
            android:textSize="@dimen/_11ssp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@android:color/primary_text_light"
            android:layout_marginBottom="4dp"
            android:drawableStart="@drawable/calender"
            android:background="@drawable/custom_input"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textColor="@android:color/primary_text_light"
            android:fontFamily="@font/inter"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:paddingStart="25sp"/>


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:paddingStart="25sp"
            android:orientation="horizontal"
            android:id="@+id/radioGroup"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male"
                android:id="@+id/radioMale"
                android:scaleY="1.2"
                android:scaleX="1.1"
                android:textColor="@android:color/primary_text_light"
                />
            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female"
                android:scaleY="1.2"
                android:scaleX="1.1"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@android:color/primary_text_light"                />
            />
            <RadioButton
                android:id="@+id/radioother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other"
                android:scaleY="1.2"
                android:scaleX="1.1"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@android:color/primary_text_light"                />
            />

        </RadioGroup>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_panel"
            android:orientation="vertical"
            android:id="@+id/address_forum"
            android:layout_margin="20sp"
            android:layout_marginTop="15sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:paddingLeft="15sp"
                android:text="@string/your_address"
                android:textSize="@dimen/_18ssp"
                android:textColor="@android:color/primary_text_light"
            android:fontFamily="@font/inter"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingStart="25sp"
                android:text="@string/country"
                android:textSize="@dimen/_11ssp"
                android:textColor="@android:color/primary_text_light"
                android:layout_marginBottom="5sp"
                android:fontFamily="@font/inter"/>

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/country"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input"
                android:hint="@string/select_country"
                android:singleLine="true"
                android:textSize="@dimen/_11ssp"
                android:textColor="@android:color/primary_text_light"
                android:fontFamily="@font/inter"
                android:paddingStart="15sp"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25sp"
                android:text="@string/state"
                android:textSize="@dimen/_11ssp"
                android:textColor="@android:color/primary_text_light"
                 android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="@font/inter"/>

            <EditText
                android:id="@+id/state"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input"
                android:hint="@string/state"
                android:singleLine="true"
                android:textColor="@android:color/primary_text_light"
                android:fontFamily="@font/inter"
                android:paddingLeft="@dimen/_11ssp"
                android:inputType="text"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25sp"
                android:text="@string/city"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_11ssp"
                android:textColor="@android:color/primary_text_light"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"/>

            <EditText
                android:id="@+id/city"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input"
                android:hint="@string/city"
                android:textColor="@android:color/primary_text_light"
                android:paddingStart="15sp"
                android:singleLine="true"
                android:textSize="@dimen/_11ssp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25sp"
                android:text="@string/pincode"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_11ssp"
                android:textColor="@android:color/primary_text_light"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"/>

            <EditText
                android:id="@+id/pincode"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input"
                android:hint="@string/pincode"
                android:textColor="@android:color/primary_text_light"
                android:inputType="number"
                android:paddingStart="15sp"
                android:singleLine="true"
                android:textSize="@dimen/_11ssp"


                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25sp"
                android:fontFamily="@font/inter"
                android:textColor="@android:color/primary_text_light"
                android:layout_marginTop="5sp"
                android:textSize="@dimen/_11ssp"
                android:layout_marginBottom="5sp"
                android:text="@string/address_line_1" />

            <EditText
                android:id="@+id/address1"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:textColor="@android:color/primary_text_light"
                android:background="@drawable/custom_input"
                android:hint="@string/address_line_1"
                android:singleLine="true"
                android:paddingStart="15sp"
                android:textSize="@dimen/_11ssp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25sp"
                android:text="@string/address_2"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_11ssp"
                android:textColor="@android:color/primary_text_light"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"/>

            <EditText
                android:id="@+id/address2"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:singleLine="true"
                android:textColor="@android:color/primary_text_light"
                android:layout_marginBottom="15sp"
                android:background="@drawable/custom_input"
                android:hint="@string/address_line_2"
                android:paddingStart="15sp"
                android:textSize="@dimen/_11ssp" />

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/shape_panel">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:paddingLeft="20px"
                android:text="@string/document_upload"
                android:textSize="25sp"
                android:textColor="@android:color/primary_text_light"
                android:fontFamily="@font/inter"
                android:textStyle="bold" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:paddingStart="10dp"
            android:fontFamily="@font/inter"
            android:textColor="@android:color/primary_text_light"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_10ssp"
            android:text="@string/to_verify_your_identity_we_ask_you_to_upload_high_quality_scans_or_photos_of_your_official_identification_documents_issued_by_the_government"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.108"
            android:layout_marginTop="2dp"/>

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:gravity="center"
            android:orientation="vertical"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.358">

            <RadioButton
                android:id="@+id/radio_passport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/passport"
                android:scaleY="1.2"
                android:scaleX="1.1"
                android:textColor="@android:color/primary_text_light"
                android:fontFamily="@font/inter"
                android:layout_gravity="center"/>

            <RadioButton
                android:id="@+id/radio_driving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/driving_license"
                android:gravity="center"
                android:scaleY="1.2"
                android:scaleX="1.1"
                android:textColor="@android:color/primary_text_light"
                android:fontFamily="@font/inter"
                android:layout_marginStart="26dp"
                android:paddingEnd="10dp"/>

            <RadioButton
                android:id="@+id/radio_national"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="1.2"
                android:scaleX="1.1"
                android:text="@string/national_id"
                android:textColor="@android:color/primary_text_light"
                android:fontFamily="@font/inter"
                android:layout_marginStart="6dp"/>

        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_front_side_of_the_document"
            android:paddingStart="25sp"
            android:textSize="@dimen/_11ssp"
            android:layout_gravity="center"
            android:textColor="@android:color/primary_text_light"
            android:fontFamily="@font/inter"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/materialButton"
            android:layout_width="@dimen/_200sdp"
            android:textColor="@android:color/primary_text_light"
            android:fontFamily="@font/inter"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.515"
            android:hint="@string/front_side"
            android:layout_gravity="center"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_back_side_of_the_document"
            android:paddingStart="25sp"
            android:layout_gravity="center"
            android:textSize="@dimen/_11ssp"
            android:textColor="@android:color/primary_text_light"
            android:fontFamily="@font/inter"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/materialButton2"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:hint="@string/back_side"
            android:textColor="@android:color/primary_text_light"
            android:fontFamily="@font/inter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.605"
            android:layout_gravity="center"
            android:layout_marginBottom="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:background="@drawable/shape_panel"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingStart="15sp"
            android:text="@string/upload_photo"
            android:textSize="25sp"
            android:textColor="@android:color/primary_text_light"
            android:fontFamily="@font/inter"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:textColor="@android:color/primary_text_light"
            android:fontFamily="@font/inter"
            android:layout_gravity="center"
            android:textSize="@dimen/_10ssp"
            android:text="@string/upload_a_selfie_as_a_photo_proof_while_holding_document_in_your_hand"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.039"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/person1"
            app:strokeWidth="3dp"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"
            app:shapeAppearanceOverlay="@style/circular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.299" />

        <Button
            android:id="@+id/chosse"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="@string/choose_file"
            android:textColor="@android:color/primary_text_light"
            android:fontFamily="@font/inter"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.497" />

        <Button
            android:id="@+id/submit"
            android:layout_width="300dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/inter"
            android:background="@drawable/invest_new"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Submit"
            />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>