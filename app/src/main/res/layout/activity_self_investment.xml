<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".self_investment"
    android:orientation="vertical"
    android:background="@drawable/profile_back"
    >
    <LinearLayout
        android:id="@+id/linear_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/inter"
            android:text="@string/Wallet"
            android:textColor="@android:color/primary_text_light"
            android:layout_marginStart="@dimen/_20sdp">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wal_bal"
            android:textSize="@dimen/_22ssp"
            android:fontFamily="@font/inter"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginBottom="5sp"
            android:textColor="@android:color/primary_text_light"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Value"
            android:gravity="center"
            android:singleLine="true"
            android:inputType="number"
            android:layout_gravity="center"
            android:fontFamily="@font/inter"
            android:background="@drawable/new_edit"
            android:id="@+id/edit_save"/>
            <Button
                android:id="@+id/invest_button"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:text="Invest Funds"
                android:textColor="@color/white"
                android:layout_marginBottom="5sp"
                android:background="@drawable/new_button"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Self Investment"
        android:textSize="25sp"
        android:fontFamily="@font/inter"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_10ssp"
        android:textColor="@android:color/primary_text_light"
        android:background="@drawable/back_new2"
        android:paddingStart="@dimen/_20sdp"
        />

    <TextView
        android:fontFamily="@font/inter"
        android:id="@+id/self_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:textColor="@android:color/primary_text_light"
        android:layout_margin="10sp"
        android:textSize="15sp"
        />





    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/fund_transfer_history"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:layout_marginStart="@dimen/_10ssp"
        android:textColor="@android:color/primary_text_light"
        android:paddingStart="@dimen/_20sdp"
        android:background="@drawable/back_new2"
        android:layout_marginTop="10dp"
         />



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginTop="@dimen/_4sdp"
        android:id="@+id/recycler5"/>


</LinearLayout>

