<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#C1D9EE">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="#0194B9"
                app:menu="@menu/top_menu"
                app:popupTheme="@style/Theme.Foxtrade.PopupOverlay">

                <ImageView
                    android:id="@+id/profile_logo"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:onClick="onButtonClick"
                    android:background="@drawable/profile12"
                    android:contentDescription="@null" />
            </androidx.appcompat.widget.Toolbar>

                <ViewFlipper
                android:id="@+id/slider"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_104sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:flipInterval="1500"
                android:autoStart="true"
                android:inAnimation="@anim/slide_out_right"
                android:outAnimation="@anim/slide_out_left">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/slid_image"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dash_design"/>

                </ViewFlipper>


            <LinearLayout
                android:layout_width="@dimen/_300sdp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="#0194B9"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rank_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="50"
                    android:hint="@string/executive"
                    android:textColorHint="@color/white"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/codeText"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:fontFamily="@font/inter"
                    android:text="@string/_000_00"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:fontFamily="@font/inter"
                    android:text="@string/name"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/new_design2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/financial_report"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@android:color/primary_text_light"
                    />


            </LinearLayout>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_145sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/new_design2"
                android:textAlignment="center"
                app:alignmentMode="alignMargins"
                app:orientation="horizontal"
                app:rowOrderPreserved="true"
                app:columnCount="4">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_gravity="center_horizontal">


                    <ImageView
                        android:id="@+id/daily_image"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:src="@drawable/newww"
                        android:contentDescription="@null"/>

                    <TextView
                        android:id="@+id/text_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:text="@string/daily_income"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="@dimen/_9ssp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="vertical"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/with_new"
                        android:contentDescription="@null"
                        android:layout_marginBottom="@dimen/_2sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:text="@string/withdrawal"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="@dimen/_9ssp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="vertical"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center_horizontal">


                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/team_s"
                        android:contentDescription="@null"
                        android:layout_marginBottom="@dimen/_2sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter"
                        android:text="@string/team_size"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="@dimen/_9ssp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="vertical"
                    app:layout_gravity="center"
                    app:layout_columnWeight="1">


                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/topup_wall"
                        android:layout_marginBottom="@dimen/_2sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter"
                        android:text="@string/Wallet"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="@dimen/_9ssp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center">


                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/current_new" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:text="@string/current_ninvestment"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="@dimen/_9ssp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center">


                    <ImageView

                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/team_sinvest" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:text="@string/team_nbusiness"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="@dimen/_9ssp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center">


                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/team_new" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:text="@string/direct_nbusiness"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="@dimen/_9ssp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="97dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center">


                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/current_with" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:text="@string/topup_nwallet"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="@dimen/_9ssp" />
                </LinearLayout>
            </androidx.gridlayout.widget.GridLayout>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="#0194B9"
                app:columnCount="4"
                app:orientation="horizontal"
                app:rowOrderPreserved="true">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:text="@string/roi"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />
                    <ImageView
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/roi_new1" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:text="@string/commission"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        />
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/comm_newic" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:text="@string/club"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginBottom="@dimen/_2sdp"

                        />
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_29sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/club_new1" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:text="@string/salary"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginBottom="@dimen/_2sdp"

                        />
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_29sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/salar_new" />


                </LinearLayout>
            </androidx.gridlayout.widget.GridLayout>



            <LinearLayout
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_50sdp"
                android:orientation="horizontal"
                android:background="@drawable/new_design2"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_6sdp"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/depo_new1"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/Deposit"
                        android:fontFamily="@font/inter"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/seprate"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/with_new1"
                        android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/withdrawal"
                    android:fontFamily="@font/inter"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="center"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_100sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/new_design2"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="@dimen/_290sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter"
                        android:text="@string/account"
                        android:background="@drawable/txt_account"
                        android:layout_gravity="center"
                        />



                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="@dimen/_300sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_4sdp"
                        app:columnCount="4"
                        app:rowOrderPreserved="true"
                        app:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_columnWeight="2"
                            app:layout_gravity="center">

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@drawable/self_invvv" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter"
                                android:gravity="center"
                                android:text="@string/self_ninvestment"
                                android:textColor="@android:color/primary_text_light"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_columnWeight="2"
                            app:layout_gravity="center">

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@drawable/fund_transs" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter"
                                android:gravity="center"
                                android:text="@string/fund_ntransfer"
                                android:textColor="@android:color/primary_text_light"
                                android:textSize="@dimen/_10ssp"

                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_columnWeight="2"
                            app:layout_gravity="center">

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@drawable/add_fund1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter"
                                android:gravity="center"
                                android:text="@string/add_nfund"
                                android:textColor="@android:color/primary_text_light"
                                android:textSize="@dimen/_10ssp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_columnWeight="1"
                            app:layout_gravity="center">

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@drawable/tem_selffff" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter"
                                android:gravity="center"
                                android:text="@string/team_nself_investment"
                                android:textColor="@android:color/primary_text_light"
                                android:textSize="@dimen/_10ssp"

                                />

                        </LinearLayout>
                    </androidx.gridlayout.widget.GridLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

       <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottam_navigator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp"
        android:layout_gravity="bottom"
        app:itemIconTint="@color/black"
        android:background="@drawable/botam_back"
        android:hapticFeedbackEnabled="true"
        app:menu="@menu/bottom_menu"
        app:labelVisibilityMode="unlabeled"
        >
           <include layout="@layout/custom_menu_item"
               />
       </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>



